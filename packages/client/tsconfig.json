{
    "compilerOptions": {
        "allowJs": true,
        "jsx": "react",
        "module": "esNext",
        "target": "es6",
        "baseUrl": ".",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "paths": {
            "@pages/*": ["./src/pages/*"],
            "@components/*": ["./src/components/*"],
            "@containers/*": ["./src/containers/*"],
            "@commons/*": ["./src/commons/*"],
            "@services/*": ["./src/services/*"],
            "@models/*": ["./src/models/*"],
            "@assets/*": ["./src/assets/*"],
            "@hooks/*": ["./src/hooks/*"]
        },        
        "lib": [
            "esnext",
            "dom",
            "dom.iterable"            
        ]      
    },
    "typeRoots": [
        "./node_modules/@types",
        "./src/types"
    ],
    "exclude": [
        "./node_modules",
        "./scripts",
        "./dist"
    ]
}
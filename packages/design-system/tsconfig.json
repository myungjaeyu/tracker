{
    "compilerOptions": {
      "allowJs": true,
      "module": "esNext",
      "outDir": "./dist",
      "target": "es6",
      "jsx": "react",
      "moduleResolution": "node",
      "declaration": true,
      "resolveJsonModule": true,
      "allowSyntheticDefaultImports": true,
      "experimentalDecorators": true,
      "lib": [
        "esnext",
        "dom",
        "dom.iterable"
      ],
    },
    "include": [
      "./src"
    ],
    "exclude": [
      "./node_modules",
      "./scripts",
      "./src/**/*.stories.tsx",
      "./dist"
  ]    
}